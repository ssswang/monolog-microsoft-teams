{
    "name": "ssswang/monolog-microsoft-teams",
    "description": "Monolog Handler for sending messages to Microsoft Teams using the Incoming Webhook connector",
    "license": "MIT",
    "require": {
        "php": "^5.6",
        "monolog/monolog": "^1.23"
    },
    "require-dev": {
        "ext-curl": "*",
        "php-coveralls/php-coveralls": "^2.0",
        "phpunit/phpunit": "^5.7|^6.0|^7.0"
    },
    "autoload": {
        "psr-4": {
            "CMDISP\\MonologMicrosoftTeams\\": "src/"
        }
    },
    "scripts": {
        "phpunit": "phpunit --colors=auto --coverage-text",
        "watch": "phpunit-watcher watch",
        "test": [
            "@phpunit"
        ]
    },
	"config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "5.6.4"
		}
	}
}